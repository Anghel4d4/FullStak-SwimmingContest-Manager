<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ro.mpp2025.Controller.RegisterController"
      style="-fx-background-color: #f5f5f5;" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER" style="-fx-background-color: #1e5799; -fx-background-radius: 5;">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <Label text="Inregistrare participant nou" style="-fx-text-fill: white; -fx-font-weight: bold;">
            <font>
                <Font size="16"/>
            </font>
        </Label>
    </HBox>

    <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <GridPane hgap="15" vgap="15">
            <padding>
                <Insets bottom="20"/>
            </padding>

            <Label text="Nume participant:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: #555555;"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250"
                       style="-fx-background-radius: 5;"/>

            <Label text="Prenume participant:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: #555555;"/>
            <TextField fx:id="prenumeField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250"
                       style="-fx-background-radius: 5;"/>

            <Label text="Varsta:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: #555555;"/>
            <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"
                       style="-fx-background-radius: 5;"/>
        </GridPane>

        <Label text="Selectati probele:" style="-fx-font-weight: bold; -fx-text-fill: #1e5799;"/>

        <TableView fx:id="probeSelectionTableView" VBox.vgrow="ALWAYS" prefHeight="300">
            <columns>
                <TableColumn fx:id="distanceSelectColumn" text="Distanta" prefWidth="150"/>
                <TableColumn fx:id="styleSelectColumn" text="Stil" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="20" />
            </padding>

            <Label fx:id="errorMessageLabel" style="-fx-text-fill: #e74c3c;" visible="false" HBox.hgrow="ALWAYS"/>

            <Button text="Anulare" onAction="#handleCancel"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
            </Button>

            <Button text="Inregistrare" onAction="#handleSaveRegistration"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
            </Button>
        </HBox>
    </VBox>
</VBox>